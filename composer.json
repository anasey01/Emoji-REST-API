{
    "name": "laztopaz/EmojiRestfulAPI",
    "description": "This package creates an Emoji Restful API using Slim framework.",
    "license": "MIT",
    "authors": [
        {
            "name": "Temitope Olotin",
            "email": "temitope.olotin@andela.com"
        }
    ],
    "autoload":{
        "psr-4":{
            "Laztopaz\\EmojiRestfulAPI\\": "src/"
        },
        "classmap":["src/"]
    },
    "autoload-dev":{
        "psr-4": {
            "Laztopaz\\EmojiRestfulAPI\\Test\\": "test/"
        },
        "classmap":["test/"]
    },
    "scripts":{
        "test":"phpunit"
        },
    "require": {
        "php": ">=5.5.9",
        "vlucas/phpdotenv": "^2.2",
        "satooshi/php-coveralls": "^1.0",
        "slim/slim": "^3.0",
        "tuupola/slim-jwt-auth": "^2.0",
         "illuminate/database": "5.0.33"
    },
    "require-dev":{
        "phpunit/phpunit": "^4.8.22",
        "mockery/mockery": "0.9.*"
    }
}
